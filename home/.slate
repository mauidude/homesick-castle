config defaultToCurrentScreen true

# maximize window
bind /:cmd move screenOriginX;screenOriginY screenSizeX;screenSizeY

# maximize window on opposite monitor
bind /:cmd,shift move screenOriginX;screenOriginY screenSizeX;screenSizeY next

# right half window
bind .:cmd move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY

# left half window
bind ,:cmd move screenOriginX;screenOriginY screenSizeX/2;screenSizeY

# right half right window
bind .:cmd,shift move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY 1

# left half right window
bind ,:cmd,shift move screenOriginX;screenOriginY screenSizeX/2;screenSizeY 1

# top half window
bind ;:cmd move screenOriginX;screenOriginY screenSizeX;screenSizeY/2

# bottom half window
bind ':cmd move screenOriginX;screenOriginY+screenSizeY/2 screenSizeX;screenSizeY/2

# layouts
layout dev 'iTerm' move screenOriginX;screenOriginY screenSizeX;screenSizeY 1
layout dev 'Google Chrome' move screenOriginX;screenOriginY screenSizeX;screenSizeY 0
bind `:alt layout dev

layout dev_inverse 'iTerm' move screenOriginX;screenOriginY screenSizeX;screenSizeY 0
layout dev_inverse 'Google Chrome' move screenOriginX;screenOriginY screenSizeX;screenSizeY 1
bind `:alt,shift layout dev_inverse

